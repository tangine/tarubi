<section data-section-id="{{ section.id }}">
  <div  class="product-grid grid">
    {% for collection in collections %}
      <a class="product-card" href="{{ collection.url }}">
        <div class="product-card__image">
          <img src="{{ collection.featured_image | image_url }}" alt="{{ collection.title }}">
        </div>
        <div class="product-card__title">{{ collection.title }}</div>
      </a>

    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Product List",
  "settings": [

  ],
  "blocks": [],
  "presets": [
    {
      "name": "Product List"
    }
  ]
}
{% endschema %}